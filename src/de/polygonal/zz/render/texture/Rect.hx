package de.polygonal.zz.render.texture;

class Rect
{
	public var x:Float;
	public var y:Float;
	public var w:Float;
	public var h:Float;
	public var r:Float;
	public var b:Float;
	
	public function new(x:Float, y:Float, w:Float, h:Float)
	{
		this.x = x;
		this.y = y;
		this.w = w;
		this.h = h;
		this.r = x + w;
		this.b = y + h;
	}
	
	public function toString():String
	{
		var format = "{x %-+8.3f y %-+8.3f w %-+8.3f h %-+.3f}";
		return de.polygonal.core.fmt.Sprintf.format(format, [x, y, w, h]);
	}
}